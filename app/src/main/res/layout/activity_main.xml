<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleTextView_text"
        android:textAlignment="center"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/press2pstart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/singlePlayerButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/singlePlayerButton_text"
        android:fontFamily="@font/press2pstart"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#000000"
        app:cornerRadius="0dp"
        app:strokeWidth="2dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center"
        android:onClick="onSinglePlayerButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <Button
        android:id="@+id/multiPlayerButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/multiPlayerButton_text"
        android:fontFamily="@font/press2pstart"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#000000"
        app:cornerRadius="0dp"
        app:strokeWidth="2dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center"
        android:onClick="onMultiPlayerButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singlePlayerButton" />

    <Button
        android:id="@+id/highScoreButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/highScoreButton_text"
        android:fontFamily="@font/press2pstart"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#000000"
        app:cornerRadius="0dp"
        app:strokeWidth="2dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center"
        android:onClick="onHighScoreButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiPlayerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>